{
  "extends": "astro/tsconfigs/strict",
  "include": [
    ".astro/types.d.ts",
    "**/*"
  ],
  "exclude": ["dist"],
  "baseUrl": ".",
  "paths": {
    "@assets/": [".src/assets/*"],
    "@layouts/": [".src/layouts/*"],
    "@sections/": [".src/sections/*"],
    "@components/": [".src/components/*"],
    "@styles/": [".src/styles/*"],
    "@types/": [".src/types/*"],
    "@utils/": [".src/utils/*"]
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  }
}